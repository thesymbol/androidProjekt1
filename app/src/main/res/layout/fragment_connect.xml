<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.orw.projekt1.ConnectFragment">

    <com.facebook.widget.LoginButton
        android:id="@+id/btnFacebookConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <Button
        android:background="@drawable/layers_twitter_button_bg"
        style="@style/twitterButton"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="30dp"
        android:id="@+id/btnTwitterConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnFacebookConnect"
        android:layout_centerHorizontal="true"
        android:text="@string/loginWithTwitter"/>

    <Button
        android:id="@+id/btnTestFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Post"
        android:layout_below="@id/btnTwitterConnect"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
